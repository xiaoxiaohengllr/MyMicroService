<Window x:Class="MyMicroService.Tool.CodeGenerationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMicroService.Tool.CodeGenerationTool"
        mc:Ignorable="d"
        Title="代码生成工具" Height="450" Width="800">
    <Grid>
        <Label Content="数据库类型" HorizontalAlignment="Left" Margin="5,10,500,320" VerticalAlignment="Top"/>
        <ComboBox Name="ComboBox_DbType" DisplayMemberPath="Name"  SelectedValuePath="ID"  Margin="0,0,450,390" Height="20" Width="200" SelectionChanged="ComboBox_DbType_SelectionChanged"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="5,10,500,320" VerticalAlignment="Top"/>
        <TextBox  Name="TextBox_IP"  Margin="0,0,450,320" Height="20" Width="200" MaxLength="13" />
        <Label Content="Port" HorizontalAlignment="Left" Margin="5,10,500,320" VerticalAlignment="Top"/>
        <TextBox  Name="TextBox_Port"  Margin="0,0,450,250" Height="20" Width="200" MaxLength="4" />
        <TextBox  Name="TextBox_AccountNumber"  Margin="0,0,450,180" Height="20" Width="200" MaxLength="30" />
    </Grid>
</Window>
